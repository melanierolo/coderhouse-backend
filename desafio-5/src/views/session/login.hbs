<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-md-4 border p-4 my-5'>
      <h2 class='text-center mb-4'>TechStore</h2>
      <form id='formLogin'>
        <div class='mb-3'>
          <label for='userEmail' class='form-label'>Correo</label>
          <input
            type='email'
            class='form-control'
            id='userEmail'
            placeholder='Ej. juanperez@example.com'
          />
        </div>
        <div class='mb-3'>
          <label for='userPassword' class='form-label'>Contraseña</label>
          <input
            type='password'
            class='form-control'
            id='userPassword'
            placeholder='Ingresa tu contraseña'
          />
        </div>
        <button type='submit' class='btn btn-primary btn-block'>Iniciar Sesión</button>
      </form>
    </div>
  </div>
</div>